@{
    ViewData["Title"] = "Home Page";
}

<ejs-grid id="Grid">
    <e-data-manager url="https://localhost:44322/api/v1/Product" adaptor="WebApiAdaptor" crossdomain="true" ></e-data-manager>

    <e-grid-columns>
        <e-grid-column field="id" headerText="ID" type="number" textAlign="Right" width="120"></e-grid-column>
        <e-grid-column field="name" headerText="Name" type="string" width="140"></e-grid-column>
        <e-grid-column field="sku" headerText="SKU" textAlign="Right" format="C2" width="120"></e-grid-column>
        <e-grid-column field="description" headerText="Description" format='yMd' textAlign="Right" width="140"></e-grid-column>
    </e-grid-columns>
</ejs-grid>
